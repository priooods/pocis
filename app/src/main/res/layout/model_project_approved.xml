<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="7dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/lay"
            android:layout_height="match_parent"
            android:background="#f9f9f9">

            <TextView
                android:layout_width="200dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp"
                android:text="P0019-2020-00027"
                android:id="@+id/model_project_approved_nomer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp"
                android:text="PREPARED"
                android:id="@+id/model_project_approved_status"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/colorGrey"
                app:layout_constraintTop_toBottomOf="@id/model_project_approved_status"
                android:layout_marginTop="10dp"
                android:id="@+id/ln"
                android:layout_marginBottom="10dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln">

                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ln1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:text="Customer Name"
                        android:textSize="9dp"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/model_project_approved_cusname"
                        android:textColor="@color/colorTextbooking"
                        android:textAllCaps="true"
                        android:textSize="10dp"
                        android:text="PS.00/172.01/PMS/XI/2014"
                        android:fontFamily="@font/montserrat_bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/ln2"
                    app:layout_constraintStart_toEndOf="@id/ln1"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="italic"
                        android:text="PPJ No."/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextbooking"
                        android:text="PT. KRAKATAU POSCO"
                        android:textSize="10dp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/model_project_approved_ppjno"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ln3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:text="Vessel Name"
                        android:textSize="9dp"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/model_project_approved_veselname"
                        android:textColor="@color/colorTextbooking"
                        android:textAllCaps="true"
                        android:textSize="10dp"
                        android:text="BG. LKH 3883"
                        android:fontFamily="@font/montserrat_bold"/>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>