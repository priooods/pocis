<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_above="@id/ln_bot"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingHorizontal="15dp"
                android:id="@+id/ln_top"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/ln1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="italic"
                        android:text="Location"/>

                    <TextView
                        android:ellipsize="end"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextbooking"
                        android:text="Quay/Dermaga"
                        android:textSize="10dp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/item1"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ln3">

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:text="Exchange Rate"
                        android:textSize="9dp"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item3"
                        android:textColor="@color/colorTextbooking"
                        android:textSize="10dp"
                        android:text="Yes"
                        android:fontFamily="@font/montserrat_bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln3"
                    android:id="@+id/ln5"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/title5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="italic"
                        android:text="BI Date"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextbooking"
                        android:text="2020-04-01 13:02:43"
                        android:textSize="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/item5"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@id/ln1"
                    app:layout_constraintBottom_toBottomOf="@id/ln1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/ln2">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:text="Start Date"
                        android:textSize="9dp"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item2"
                        android:textColor="@color/colorTextbooking"
                        android:textSize="10dp"
                        android:text="1234567890"
                        android:fontFamily="@font/montserrat_bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln2"
                    android:id="@+id/ln4"
                    app:layout_constraintStart_toStartOf="@id/ln2"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="italic"
                        android:text="End Date"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextbooking"
                        android:text="0986543212345678"
                        android:textSize="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/item4"/>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_below="@id/ln_top"
                android:layout_marginTop="14dp"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="12dp"
                    android:text="List Of Services Related To Project"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/a"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/a"
                    android:layout_marginTop="10dp"
                    android:id="@+id/recycle_service_project"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/ln_bot"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_total"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <LinearLayout
            android:id="@+id/ln_bot1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerVertical="true"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/title_bot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount DP in IDR"
                android:textSize="10dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:textSize="12dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 289.102.093"
                android:id="@+id/item_bot1"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ln_bot3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/title_bot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free PPn"
                android:textSize="8dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_reguler"/>

            <TextView
                android:textSize="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 289.102.093"
                android:id="@+id/item_bot3"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ln_bot4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ln_bot2"
            app:layout_constraintStart_toEndOf="@id/ln_bot3"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/title_bot4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Paid by DP"
                android:textSize="8dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_reguler"/>

            <TextView
                android:textSize="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 289.102.093"
                android:id="@+id/item_bot4"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ln_bot5"
            app:layout_constraintTop_toBottomOf="@id/ln_bot3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/title_bot5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PPh IDR"
                android:textSize="8dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_reguler"/>

            <TextView
                android:textSize="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 289.102.093"
                android:id="@+id/item_bot5"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ln_bot6"
            app:layout_constraintEnd_toStartOf="@id/ln_bot2"
            app:layout_constraintTop_toBottomOf="@id/ln_bot4"
            app:layout_constraintStart_toEndOf="@id/ln_bot5"
            android:layout_marginTop="6dp"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/title_bot6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Paid in Invoice"
                android:textSize="8dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_reguler"/>

            <TextView
                android:textSize="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 289.102.093"
                android:id="@+id/item_bot6"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ln_bot7"
            app:layout_constraintTop_toBottomOf="@id/ln_bot5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/title_bot7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PPh in IDR"
                android:textSize="8dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_reguler"/>

            <TextView
                android:textSize="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 289.102.093"
                android:id="@+id/item_bot7"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_bot2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_centerVertical="true"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/title_bot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount in IDR"
                android:textSize="10dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 123.123.123"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/item_bot2"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>