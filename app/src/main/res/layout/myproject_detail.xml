<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="15dp"
        android:id="@+id/a"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_back"
            android:id="@+id/project_details_btn_back"/>

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Projects Details"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/forPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Projects"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorGrey"
                    android:textSize="9dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/b"
        android:paddingHorizontal="15dp"
        android:layout_below="@id/a"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ln_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_top1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Booking No"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="12dp"
                android:text="P0019-2020-00027"
                android:textAllCaps="true"
                android:layout_marginTop="4dp"
                android:id="@+id/item_top1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9dp"
                android:id="@+id/title_top2"
                android:text="Project Status"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="12dp"
                android:textStyle="bold"
                android:text="PREPARED"
                android:layout_marginTop="4dp"
                android:id="@+id/item_top2"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ln_sub0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:background="#f9f9f9"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/ln_top2">

            <LinearLayout
                android:id="@+id/ln_sub1"
                android:layout_alignParentLeft="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_sub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:textStyle="italic"
                    android:text="Temp Project No."
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorGrey"/>

                <TextView
                    android:id="@+id/item_sub1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="PPJ/P0019-288/01"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_sub2"
                android:layout_alignParentRight="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_sub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:textStyle="italic"
                    android:text="Schedule Code"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorGrey"/>

                <TextView
                    android:id="@+id/item_sub2"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="H9JY01002"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_below="@id/ln_sub1"
                android:id="@+id/ln_sub3"
                android:layout_alignParentLeft="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_sub3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:textStyle="italic"
                    android:text="Temp Project No."
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorGrey"/>

                <TextView
                    android:id="@+id/item_sub3"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="PPJ/P0019-288/01"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_below="@id/ln_sub2"
                android:id="@+id/ln_sub4"
                android:layout_alignParentRight="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_sub4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:textStyle="italic"
                    android:text="Schedule Code"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorGrey"/>

                <TextView
                    android:id="@+id/item_sub4"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="H9JY01002"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/b"
        android:layout_marginTop="5dp"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextAppearance="@style/TablayoutStyle"
        app:tabMode="fixed"
        app:tabTextColor="@color/colorPrimaryDarkLow"
        app:tabGravity="center"
        app:tabIndicatorHeight="3dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/project_details_tablayout"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/project_details_tablayout"
        android:id="@+id/project_details_viewpager"/>

</RelativeLayout>