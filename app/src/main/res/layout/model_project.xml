<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/layout_project"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9F9">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/a">

                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:id="@+id/s"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ini Testing"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="11dp"
                        android:id="@+id/model_number"/>

                    <TextView
                        android:visibility="gone"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ini Testing"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/colorGrey"
                        android:textSize="12dp"
                        android:id="@+id/model_number_bot"/>

                </LinearLayout>

                <TextView
                    android:layout_width="130dp"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:text="Ini Testing"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorGreen"
                    android:textSize="11dp"
                    app:layout_constraintTop_toTopOf="@id/s"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/s"
                    android:id="@+id/model_status"/>

                <LinearLayout
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="6dp"
                    android:id="@+id/ln_top1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/s"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="vertical"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/title_top1"
                        android:textSize="9dp"
                        android:fontFamily="@font/montserrat_reguler"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date issued"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:textSize="11dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_width="match_parent"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="23 Des 2020 "
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/item_top1"/>


                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="6dp"
                    android:id="@+id/ln_top2"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ln_top1"
                    app:layout_constraintStart_toEndOf="@id/ln_top1"
                    app:layout_constraintBottom_toBottomOf="@id/ln_top1"
                    android:orientation="vertical"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/title_top2"
                        android:textSize="9dp"
                        android:fontFamily="@font/montserrat_reguler"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PPJ Number"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:textSize="11dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_width="match_parent"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="23 Des 2020 "
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/item_top2"/>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/e"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_below="@id/a"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/r"
                android:layout_below="@id/e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ln1">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:text="Booking No"
                        android:textSize="9dp"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item1"
                        android:textColor="@color/colorTextbooking"
                        android:textAllCaps="true"
                        android:textSize="10dp"
                        android:text="PS.00/172.01/PMS/XI/2014"
                        android:fontFamily="@font/montserrat_bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/ln2"
                    app:layout_constraintStart_toEndOf="@id/ln1"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="italic"
                        android:text="Start Date"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextbooking"
                        android:text="PT. KRAKATAU POSCO"
                        android:textSize="10dp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/item2"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ln3">

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:text="Schedule Code"
                        android:textSize="9dp"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item3"
                        android:textColor="@color/colorTextbooking"
                        android:textAllCaps="true"
                        android:textSize="10dp"
                        android:text="BG. LKH 3883"
                        android:fontFamily="@font/montserrat_bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln1"
                    android:id="@+id/ln4"
                    app:layout_constraintStart_toStartOf="@id/ln2"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="italic"
                        android:text="Consignee Name"/>

                    <TextView
                        android:ellipsize="end"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextbooking"
                        android:text="CNEE"
                        android:textSize="10dp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/item4"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ln5">

                    <TextView
                        android:id="@+id/title5"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:text="Tonage"
                        android:textSize="9dp"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item5"
                        android:textColor="@color/colorTextbooking"
                        android:textSize="10dp"
                        android:text="Yes"
                        android:fontFamily="@font/montserrat_bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln4"
                    android:id="@+id/ln6"
                    app:layout_constraintStart_toStartOf="@id/ln2"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/title6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="italic"
                        android:text="Vessel Name"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextbooking"
                        android:text="2020-04-01 13:02:43"
                        android:textSize="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/item6"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln5"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ln7">

                    <TextView
                        android:id="@+id/title7"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:text="Bill Payment Number"
                        android:textSize="9dp"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item7"
                        android:textColor="@color/colorTextbooking"
                        android:textSize="10dp"
                        android:text="1234567890"
                        android:fontFamily="@font/montserrat_bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln6"
                    android:id="@+id/ln8"
                    app:layout_constraintStart_toStartOf="@id/ln2"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/title8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="italic"
                        android:text="VA Number"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextbooking"
                        android:text="0986543212345678"
                        android:textSize="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/item8"/>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>