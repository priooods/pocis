<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollIndicators="none"
    android:paddingBottom="15dp"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="8dp"
        android:paddingHorizontal="15dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12dp"
            android:text="Project Information"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/a"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/b"
            app:layout_constraintTop_toBottomOf="@id/a"
            android:layout_marginTop="8dp"
            app:cardElevation="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:background="#F9F9F9"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/yy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="4dp"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Consignee Name"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_project_info_consigne"
                            android:textColor="@color/colorTextbooking"
                            android:textSize="11dp"
                            android:text="PS.00/172.01/PMS/XI/2014"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/ln2"
                        app:layout_constraintStart_toEndOf="@id/ln1"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="italic"
                            android:text="Start Date"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextbooking"
                            android:text="16 September 2020 13:02"
                            android:textSize="11dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:id="@+id/detail_project_info_startDate"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Vessel Name"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_project_info_vesselName"
                            android:textColor="@color/colorTextbooking"
                            android:textSize="11dp"
                            android:text="BG. LKH 3883"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln1"
                        android:id="@+id/ln4"
                        app:layout_constraintStart_toStartOf="@id/ln2"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="italic"
                            android:text="End Date"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextbooking"
                            android:text="20 September 2020 13:02"
                            android:textSize="11dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:id="@+id/detail_project_info_endDate"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Related Vessel"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_project_info_relatedvessel"
                            android:textColor="@color/colorTextbooking"
                            android:textSize="11dp"
                            android:text="Yes"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln4"
                        android:id="@+id/ln6"
                        app:layout_constraintStart_toStartOf="@id/ln2"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="italic"
                            android:text="Payment Type"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextbooking"
                            android:text="Full Payment"
                            android:textSize="11dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:id="@+id/detail_project_info_paymentType"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Flag Compound"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_project_info_flagCompound"
                            android:textColor="@color/colorTextbooking"
                            android:textSize="11dp"
                            android:text="Yes"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln6"
                        android:id="@+id/ln8"
                        app:layout_constraintStart_toStartOf="@id/ln2"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="italic"
                            android:text="Tonnage"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextbooking"
                            android:text="2020-03-27 08:00:00"
                            android:textSize="11dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:id="@+id/detail_project_info_tonage"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln7"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln9">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Loading/Discharge Shipp Call No"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_project_info_shipCall"
                            android:textColor="@color/colorTextbooking"
                            android:textSize="11dp"
                            android:text="/1145D"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    app:layout_constraintTop_toBottomOf="@id/yy"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorGrey"
                    android:id="@+id/xx"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/xx"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:text="Department Group"
                        android:fontFamily="@font/montserrat_reguler"
                        android:textSize="10dp"/>

                    <TextView
                        android:id="@+id/detail_project_info_department"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Subdit Operasi Kepelabuhanan (Operasi Internal)"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="11dp"/>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>