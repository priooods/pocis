<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".createboking.Summary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/top"
        android:orientation="horizontal">

        <TextView
            app:layout_constraintTop_toTopOf="@id/t"
            app:layout_constraintBottom_toBottomOf="@id/t"
            app:layout_constraintEnd_toStartOf="@id/t"
            android:textSize="9dp"
            android:layout_marginRight="13dp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vessel information"
            android:textColor="#6F95BB"/>

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/t"
            android:textSize="11dp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            app:layout_constraintStart_toEndOf="@id/t"
            app:layout_constraintTop_toTopOf="@id/t"
            app:layout_constraintBottom_toBottomOf="@id/t"
            android:textSize="9dp"
            android:layout_marginLeft="13dp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:textColor="#6F95BB"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_below="@id/top"
        android:layout_centerHorizontal="true"
        android:id="@+id/two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_indicator_unactive"/>

        <View
            android:layout_marginLeft="4dp"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:background="#000000"/>

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_indicator_unactive"/>

        <View
            android:layout_marginLeft="4dp"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:background="#000000"/>

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_indicator_unactive"/>

        <View
            android:layout_marginLeft="4dp"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:background="#000000"/>

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_indicator_unactive"/>

        <View
            android:layout_marginLeft="4dp"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:background="#000000"/>

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_indicator_unactive"/>

        <View
            android:layout_marginLeft="4dp"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:background="#000000"/>

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_indicator_unactive"/>

        <View
            android:layout_marginLeft="4dp"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:background="#000000"/>

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_indicator_active"/>

        <View
            android:layout_marginLeft="4dp"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:background="#000000"/>

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_indicator_unactive"/>


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rlbtn"
        android:layout_below="@id/two">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="20dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp"
                android:text="Great works! Just take a while to see your booking summary below"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/z"
                android:id="@+id/a"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Information"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:padding="13dp"
                        android:layout_width="match_parent"
                        android:background="#F9F9F9"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_alignParentLeft="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textStyle="italic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Customer Type"
                                    android:fontFamily="@font/montserrat_reguler"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="10dp"/>

                                <TextView
                                    android:layout_marginTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="11dp"
                                    android:text="Related Vessel"
                                    android:id="@+id/veselinfo_customer_type"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textStyle="italic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10dp"
                                    android:fontFamily="@font/montserrat_reguler"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="Related Vessel"/>

                                <TextView
                                    android:layout_marginTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11dp"
                                    android:id="@+id/veselinfo_related_vesel"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="Related Vessel"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10dp"
                                    android:textStyle="italic"
                                    android:fontFamily="@font/montserrat_reguler"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="Contract"/>

                                <TextView
                                    android:layout_marginTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11dp"
                                    android:id="@+id/veselinfo_contract"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="Related Vessel"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/b"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/a"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"
                    android:text="Schedule Information"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="10dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:background="#F9F9F9"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/ln1">

                            <TextView
                                android:fontFamily="@font/montserrat_reguler"
                                android:layout_width="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="Vessel Name"
                                android:textSize="9dp"
                                android:textStyle="italic"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/veselinfo_veselname"
                                android:textColor="@color/colorTextbooking"
                                android:textAllCaps="true"
                                android:textSize="10dp"
                                android:text="PS.00/172.01/PMS/XI/2014"
                                android:fontFamily="@font/montserrat_bold"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/ln2"
                            app:layout_constraintStart_toEndOf="@id/ln1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="9dp"
                                android:fontFamily="@font/montserrat_reguler"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="italic"
                                android:text="Loading/Discharge Ship Call"/>

                            <TextView
                                android:maxLines="1"
                                android:layout_marginTop="3dp"
                                android:ellipsize="end"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextbooking"
                                android:text="PT. KRAKATAU POSCO"
                                android:textSize="10dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:id="@+id/veselinfo_loading_discharge"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toBottomOf="@id/ln1"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/ln3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="Est. Arrival"
                                android:textSize="9dp"
                                android:fontFamily="@font/montserrat_reguler"
                                android:textStyle="italic"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="3dp"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/veselinfo_arrival"
                                android:textColor="@color/colorTextbooking"
                                android:textSize="10dp"
                                android:text="BG. LKH 3883"
                                android:fontFamily="@font/montserrat_bold"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toBottomOf="@id/ln1"
                            android:id="@+id/ln4"
                            app:layout_constraintStart_toStartOf="@id/ln2"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="9dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:fontFamily="@font/montserrat_reguler"
                                android:textStyle="italic"
                                android:text="Port Of Discharge"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:ellipsize="end"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextbooking"
                                android:text="CNEE"
                                android:textSize="10dp"
                                android:textAllCaps="true"
                                android:fontFamily="@font/montserrat_bold"
                                android:id="@+id/veselinfo_port"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toBottomOf="@id/ln3"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/ln5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="Est. Departue"
                                android:textSize="9dp"
                                android:fontFamily="@font/montserrat_reguler"
                                android:textStyle="italic"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:maxLines="1"
                                android:layout_marginTop="3dp"
                                android:ellipsize="end"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/veselinfo_departure"
                                android:textColor="@color/colorTextbooking"
                                android:textSize="10dp"
                                android:text="Yes"
                                android:fontFamily="@font/montserrat_bold"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toBottomOf="@id/ln4"
                            android:id="@+id/ln6"
                            app:layout_constraintStart_toStartOf="@id/ln2"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="9dp"
                                android:fontFamily="@font/montserrat_reguler"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="italic"
                                android:text="Port of Loading"/>

                            <TextView
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="3dp"
                                android:layout_width="145dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextbooking"
                                android:text="2020-04-01 13:02:43"
                                android:textSize="10dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:id="@+id/veselinfo_loading"/>


                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/b"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Information"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/veselinfo_list"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/d"
                app:layout_constraintTop_toBottomOf="@id/c"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commodity Information"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/recycle_vesel_comodityInfo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/d"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Upload"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F9F9F9">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/veselinfo_documentList"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:id="@+id/rlbtn">

        <Button
            android:layout_alignParentLeft="true"
            android:id="@+id/summary_prevBtn"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Prev"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_cancel"
            android:textSize="13dp"/>

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/summary_nextBtn"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Create Booking"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_green"
            android:textSize="13dp"/>

    </RelativeLayout>

</RelativeLayout>