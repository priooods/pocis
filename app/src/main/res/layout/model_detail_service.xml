<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCardbg">

            <TextView
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/booking_details_service_include"
                android:textColor="@color/colorTextbooking"
                android:textAllCaps="true"
                android:textSize="11dp"
                android:text="PS.00/172.01/PMS/XI/2014"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@id/booking_details_service_include"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/booking_details_service_price"
                android:textColor="@color/colorTextbooking"
                android:textAllCaps="true"
                android:textSize="10dp"
                android:text="PS.00/172.01/PMS/XI/2014"
                android:fontFamily="@font/montserrat_reguler"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>