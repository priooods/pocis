<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollIndicators="none"
    android:paddingBottom="5dp"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="8dp"
        android:paddingHorizontal="15dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12dp"
            android:text="Booking Information"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/a"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/b"
            app:layout_constraintTop_toBottomOf="@id/a"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:background="@color/colorCardbg"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="4dp"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Contract No"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_info_booking_contractNo"
                            android:textColor="@color/colorTextbooking"
                            android:textAllCaps="true"
                            android:textSize="11dp"
                            android:text="PS.00/172.01/PMS/XI/2014"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/ln2"
                        app:layout_constraintStart_toEndOf="@id/ln1"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="italic"
                            android:text="Customer Name"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextbooking"
                            android:text="PT. KRAKATAU POSCO"
                            android:textSize="11dp"
                            android:textAllCaps="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:id="@+id/detail_info_booking_customerName"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Vessel Name"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_info_booking_vesselName"
                            android:textColor="@color/colorTextbooking"
                            android:textAllCaps="true"
                            android:textSize="11dp"
                            android:text="BG. LKH 3883"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln1"
                        android:id="@+id/ln4"
                        app:layout_constraintStart_toStartOf="@id/ln2"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="italic"
                            android:text="Customer Type"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextbooking"
                            android:text="CNEE"
                            android:textSize="11dp"
                            android:textAllCaps="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:id="@+id/detail_info_booking_customerType"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Flag Vessel"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_info_booking_flagvessel"
                            android:textColor="@color/colorTextbooking"
                            android:textSize="11dp"
                            android:text="Yes"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln4"
                        android:id="@+id/ln6"
                        app:layout_constraintStart_toStartOf="@id/ln2"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="italic"
                            android:text="Booking Date"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextbooking"
                            android:text="2020-04-01 13:02:43"
                            android:textSize="11dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:id="@+id/detail_info_booking_bookingDate"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Flag Contract"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_info_booking_flagContract"
                            android:textColor="@color/colorTextbooking"
                            android:textSize="11dp"
                            android:text="Yes"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln6"
                        android:id="@+id/ln8"
                        app:layout_constraintStart_toStartOf="@id/ln2"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="italic"
                            android:text="Booking Time"/>

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextbooking"
                            android:text="2020-03-27 08:00:00"
                            android:textSize="11dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:id="@+id/detail_info_booking_bookingTime"/>


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/b"
            android:textSize="12dp"
            android:text="Schedule Information"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/c"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/d"
            app:layout_constraintTop_toBottomOf="@id/c"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:background="@color/colorCardbg"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/go_detail_booking"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln11">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Vessel Name"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_info_schedule_booking_vesselName"
                            android:textColor="@color/colorTextbooking"
                            android:textAllCaps="true"
                            android:textSize="11dp"
                            android:text="BG. LKH 3883"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/ln21"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="italic"
                            android:text="Loading / Discharge Ship Call"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextbooking"
                            android:text="12814d"
                            android:textSize="11dp"
                            android:textAllCaps="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:id="@+id/detail_info_schedule_booking_discharge"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln11"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln31">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Est. Arrival"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_info_schedule_booking_estArival"
                            android:textColor="@color/colorTextbooking"
                            android:textSize="11dp"
                            android:text="2020-04-02 06:00:00"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln21"
                        android:id="@+id/ln41"
                        app:layout_constraintStart_toStartOf="@id/ln21"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="italic"
                            android:text="Port of Cigading"/>

                        <TextView
                            android:textAllCaps="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextbooking"
                            android:text="cigading port 2"
                            android:textSize="11dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:id="@+id/detail_info_schedule_booking_port"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln31"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/ln51">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGrey"
                            android:text="Est. Departure"
                            android:textSize="10dp"
                            android:textStyle="italic"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_info_schedule_booking_departure"
                            android:textColor="@color/colorTextbooking"
                            android:textSize="11dp"
                            android:text="2020-04-06 18:00:00"
                            android:fontFamily="@font/montserrat_bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/ln41"
                        android:id="@+id/ln61"
                        app:layout_constraintStart_toStartOf="@id/ln41"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@color/colorGrey"
                            android:textStyle="italic"
                            android:text="Port of Loading"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextbooking"
                            android:text="SGSIN - SINGAPORE"
                            android:textSize="11dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:id="@+id/detail_info_schedule_booking_loading"/>


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>