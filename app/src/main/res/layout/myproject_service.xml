<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_above="@id/bot"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingHorizontal="15dp"
                android:id="@+id/w"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/ln1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="italic"
                        android:text="Location"/>

                    <TextView
                        android:ellipsize="end"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextbooking"
                        android:text="Quay/Dermaga"
                        android:textSize="10dp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/myproject_service_location"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ln3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:text="Exchange Rate"
                        android:textSize="9dp"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/myproject_service_exchange"
                        android:textColor="@color/colorTextbooking"
                        android:textSize="10dp"
                        android:text="Yes"
                        android:fontFamily="@font/montserrat_bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln3"
                    android:id="@+id/ln5"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="italic"
                        android:text="BI Date"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextbooking"
                        android:text="2020-04-01 13:02:43"
                        android:textSize="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/myproject_service_BI_Date"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@id/ln1"
                    app:layout_constraintBottom_toBottomOf="@id/ln1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/ln2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:text="Start Date"
                        android:textSize="9dp"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:ellipsize="end"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/myproject_service_startDate"
                        android:textColor="@color/colorTextbooking"
                        android:textSize="10dp"
                        android:text="1234567890"
                        android:fontFamily="@font/montserrat_bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ln2"
                    android:id="@+id/ln8"
                    app:layout_constraintStart_toStartOf="@id/ln2"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="italic"
                        android:text="End Date"/>

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextbooking"
                        android:text="0986543212345678"
                        android:textSize="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/myproject_service_endDate"/>


                </LinearLayout>

                <TextView
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@id/ln5"
                    android:textSize="12dp"
                    android:text="List Of Services Related To Project"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/a"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/a"
                    android:layout_marginTop="10dp"
                    android:id="@+id/recycle_service_project"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/bot"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_total"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            app:layout_constraintBottom_toBottomOf="@+id/x"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorWhite"
            android:text="--"/>

        <LinearLayout
            android:id="@+id/Y"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerVertical="true"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount DP in IDR"
                android:textSize="11dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:textSize="12dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 289.102.093"
                android:id="@+id/project_service_total"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_centerVertical="true"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount in IDR"
                android:textSize="11dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 123.123.123"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/project_service_total_amount"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>