<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:layout_above="@id/c">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imglgo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="34dp"
                android:src="@drawable/logo_kbs"/>

            <RelativeLayout
                android:id="@+id/l1"
                app:layout_constraintTop_toBottomOf="@id/imglgo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PoCIS"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="70dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:id="@+id/a"/>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/a"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_height="wrap_content"
                    android:text="Port of Cigading Information System"/>

            </RelativeLayout>

            <LinearLayout
                android:focusableInTouchMode="true"
                android:id="@+id/l2"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                app:layout_constraintTop_toBottomOf="@id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/montserrat_reguler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="13dp"/>

                <RelativeLayout
                    android:background="@drawable/form_input"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingHorizontal="9dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:id="@+id/input_username_login"
                        android:inputType="text"/>

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:src="@drawable/username_icon"/>

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textSize="13dp"/>

                <RelativeLayout
                    android:background="@drawable/form_input"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingHorizontal="9dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:id="@+id/input_password_login"
                        android:inputType="textPassword"/>

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:src="@drawable/password_icon"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                app:layout_constraintTop_toBottomOf="@id/l2"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lupa Password ?"
                android:textSize="12dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/lupa_password"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@id/lupa_password"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/btn_primary"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:id="@+id/btn_login"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/c"
        android:textColor="@color/colorAccent"
        android:textSize="12dp"
        android:fontFamily="@font/montserrat_reguler"
        android:text="@string/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>