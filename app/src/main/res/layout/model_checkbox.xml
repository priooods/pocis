<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/colorGrey"
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/nameselecttemplate"/>

    <TextView
        android:id="@+id/idselecttemplate"
        app:layout_constraintTop_toTopOf="@id/nameselecttemplate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/nameselecttemplate"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="f003-001"
        android:textAllCaps="true"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="9dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/nameselecttemplate"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/idselecttemplate"
        android:fontFamily="@font/montserrat_reguler"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="#00346A"
        android:text="Pas Masuk Kendaraan L300/Sejenisnya"
        android:textSize="10dp"/>

    <CheckBox
        android:layout_marginRight="5dp"
        android:button="@drawable/checked_box_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/nameselecttemplate"
        app:layout_constraintBottom_toBottomOf="@id/nameselecttemplate"
        android:id="@+id/modelcheck_selecttemplate"/>

</androidx.constraintlayout.widget.ConstraintLayout>