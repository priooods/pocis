<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#F9F9F9"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/a">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/project_service_name"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:fontFamily="@font/montserrat_bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

            </LinearLayout>

            <TextView
                app:layout_constraintTop_toBottomOf="@id/a"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/project_service_tarif"
                app:layout_constraintBottom_toBottomOf="@id/project_service_tarif"
                android:layout_width="wrap_content"
                android:id="@+id/b"
                android:layout_height="wrap_content"
                android:text="Tariff"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp"/>

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/project_service_parameter1"
                app:layout_constraintBottom_toBottomOf="@id/project_service_parameter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parameter 1"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp"/>

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/project_service_parameter2"
                app:layout_constraintBottom_toBottomOf="@id/project_service_parameter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parameter 2"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp"/>

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/project_service_amountIDR"
                app:layout_constraintBottom_toBottomOf="@id/project_service_amountIDR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount in IDR"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp"/>

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/project_service_DPinIdr"
                app:layout_constraintBottom_toBottomOf="@id/project_service_DPinIdr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount DP in IDR"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@id/a"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:id="@+id/project_service_tarif"
                android:fontFamily="@font/montserrat_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@id/project_service_tarif"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:id="@+id/project_service_parameter1"
                android:fontFamily="@font/montserrat_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@id/project_service_parameter1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:id="@+id/project_service_parameter2"
                android:fontFamily="@font/montserrat_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"/>

            <TextView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/project_service_parameter2"
                android:layout_marginTop="12dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:id="@+id/project_service_amountIDR"
                android:fontFamily="@font/montserrat_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"/>

            <TextView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/project_service_amountIDR"
                android:layout_marginTop="12dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:id="@+id/project_service_DPinIdr"
                android:fontFamily="@font/montserrat_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>