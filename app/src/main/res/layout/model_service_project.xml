<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#F9F9F9"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/ln0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:id="@+id/title0"
                    android:visibility="gone"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/item0"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:fontFamily="@font/montserrat_bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln0"
                android:layout_marginTop="12dp"
                android:id="@+id/ln1">

                <TextView
                    app:layout_constraintTop_toTopOf="@id/item1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/item1"
                    android:layout_width="wrap_content"
                    android:id="@+id/title1"
                    android:layout_height="wrap_content"
                    android:text="Tariff"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:id="@+id/item1"
                    android:fontFamily="@font/montserrat_bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln1"
                android:layout_marginTop="12dp"
                android:id="@+id/ln2">

                <TextView
                    app:layout_constraintTop_toTopOf="@id/item2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/item2"
                    android:layout_width="wrap_content"
                    android:id="@+id/title2"
                    android:layout_height="wrap_content"
                    android:text="Parameter 1"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:id="@+id/item2"
                    android:fontFamily="@font/montserrat_bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln2"
                android:layout_marginTop="12dp"
                android:id="@+id/ln3">

                <TextView
                    app:layout_constraintTop_toTopOf="@id/item3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/item3"
                    android:layout_width="wrap_content"
                    android:id="@+id/title3"
                    android:layout_height="wrap_content"
                    android:text="Parameter 2"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:id="@+id/item3"
                    android:fontFamily="@font/montserrat_bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln3"
                android:layout_marginTop="12dp"
                android:id="@+id/ln4">

                <TextView
                    app:layout_constraintTop_toTopOf="@id/item4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/item4"
                    android:layout_width="wrap_content"
                    android:id="@+id/title4"
                    android:layout_height="wrap_content"
                    android:text="Amount in IDR"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:id="@+id/item4"
                    android:fontFamily="@font/montserrat_bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln4"
                android:layout_marginTop="12dp"
                android:id="@+id/ln5">

                <TextView
                    app:layout_constraintTop_toTopOf="@id/item5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/item5"
                    android:layout_width="wrap_content"
                    android:id="@+id/title5"
                    android:layout_height="wrap_content"
                    android:text="Tariff"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:id="@+id/item5"
                    android:fontFamily="@font/montserrat_bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln5"
                android:layout_marginTop="12dp"
                android:id="@+id/ln6">

                <TextView
                    app:layout_constraintTop_toTopOf="@id/item6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/item6"
                    android:layout_width="wrap_content"
                    android:id="@+id/title6"
                    android:layout_height="wrap_content"
                    android:text="Tariff"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:id="@+id/item6"
                    android:fontFamily="@font/montserrat_bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln6"
                android:layout_marginTop="12dp"
                android:id="@+id/ln7">

                <TextView
                    app:layout_constraintTop_toTopOf="@id/item7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/item7"
                    android:layout_width="wrap_content"
                    android:id="@+id/title7"
                    android:layout_height="wrap_content"
                    android:text="Tariff"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_reguler"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:id="@+id/item7"
                    android:fontFamily="@font/montserrat_bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>